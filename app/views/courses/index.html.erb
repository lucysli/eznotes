<% provide(:title, 'Courses') %>
<h1 id="heading"> Courses (<%= @courses.count %>)</h1>

<div class="row">
<aside class="span2">
   <section>
      <div class="btn-group btn-group-vertical">
         <%= link_to "Import Courses", new_course_import_path, class: "btn btn-small btn-primary cus-upload" %>
         <%= link_to "Delete All Courses", 'delete_all', method: :delete, data: { confirm: "WARNING This will delete all courses hence will also delete all course registrations made by students and all notes associated with the course." },class: "btn btn-small btn-danger cus-trash" %>
      </div>
   </section>
</aside>
<div class="span10">
   <%= form_tag courses_path, method: 'get', html: { class: "form-inline" }, id: "courses_search" do %>
      <%= label_tag :search, nil, class: "cus-eye" %>
      <%= text_field_tag :search, params[:search], class: "input-large" %>
   <% end %>



   <div id="courses_pagination_top">
      <%= will_paginate @courses %>
   </div>

   <div id="courses">
      <%= render @courses %> 
   </div>

   <div id="courses_pagination_bottom">
      <%= will_paginate @courses %>
   </div>

</div>
   
</div>