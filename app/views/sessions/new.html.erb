<% provide(:title, "Sign in") %>
<h3>Please log in with your McGill Email and password</h3>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(:session, url: sessions_path) do |f| %>

			<%= f.label :email %>
			<%= f.text_field :email, placeholder: 'firstname.lastname@mail.mcgill.ca' %>

			<%= f.label :password %>
			<%= f.password_field :password, placeholder: 'McGill password'%>

			<%= button_tag(type: 'submit', class: "btn btn-medium btn-primary") do %>
				<i class="cus-login"></i> Sign in
			<% end %>
		<% end %>

		<p>New note taker? <%= link_to "Sign up now!", signup_path, class: "cus-user" %></p>
	</div>
</div>