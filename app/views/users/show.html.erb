<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= @user.name %>
        (
        <% if current_user.note_taker? %>
           <i class="cus-pencil"></i> NoteTaker
        <% elsif current_user.admin?%>
           <i class="cus-cog-alt"></i> Admin
        <% else %>
           <i class="cus-user"></i> NoteUser
        <% end %>)
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.notes.any? %>
      <h3>
        <%= pluralize(@user.notes.count, "Note") %> uploaded.
      </h3>
      <ol class="notes">
        <%= render @notes %>
      </ol>
      <%= will_paginate @notes %>
    <% end %>
  </div>
</div>