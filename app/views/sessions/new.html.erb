<% provide(:title, "Sign in") %>

<section class="well span6 offset4">
		<%= form_for(:session, url: sessions_path, html: {class: "form-inline"} ) do |f| %>
			<legend>Please Log In With Your McGill Email and Password</legend>

			<fieldset class="control-group">
				<%= f.label :email do %>
					<i class="icon-envelope icon-large"></i> McGill Email
				<% end %>
				<p class="controls">
					<%= f.email_field :email, required: true, autofocus: true,
						:'data-validation-email-message' => "Please enter a valid email", 
						:'data-validation-regex-regex' => "^[a-zA-Z0-9\-]+\\.([a-zA-Z0-9]+\\.)?[a-zA-Z0-9\-]+(@mail.mcgill.ca|@mcgill.ca)$", 
						:'data-validation-regex-message' => "Must be of the form 
						firstname.lastname@mail.mcgill.ca or firstname.lastname@mcgill.ca",  placeholder: 'firstname.lastname', class: "input-xlarge" %>
				</p>
			</fieldset>

			<fieldset class="control-group">
				<%= f.label :password, " McGill Password", class: "icon-lock icon-large" %>
				<p class="controls">
					<%= f.password_field :password, required: true, minLength: "8",
						:'data-validation-regex-regex' => "^[^\\s']+$", 
						:'data-validation-regex-message' => "Password is incorrect format; cannot have any spaces or quotes(')", placeholder: 'McGill password', class: "input-xlarge" %>
				</p>
			</fieldset>

			<fieldset>
				<%= button_tag(type: 'submit', class: "icon-signin icon-large btn btn-inverse") do %>
					Sign in
				<% end %>
			</fieldset>
		<% end %>

		<section>
			<p>New User? 
				<%= link_to signup_noteuser_path do %>
					<i class="icon-user icon-large"></i> Sign up now!
				<% end %>
			</p>
			<p>New NoteTaker? <%= link_to " Sign up now!", signup_notetaker_path, class: "icon-pencil icon-large" %></p>
			<p><%= link_to " Forgotten password? Click to reset", new_password_reset_path, class: "icon-unlock-alt icon-large" %> </p>
		</section>
</section>