<% provide(:title, "Sign in") %>
<h3>Please log in with your McGill Email and password</h3>

<div class="row">
	<div class="span4 offset3">
		<%= form_for(:session, url: sessions_path) do |f| %>

			<%= f.label :email, "McGill Email", class: "cus-mail-alt" %>
			<div class="input-append">
				<%= f.text_field :email, placeholder: 'firstname.lastname' %>
				<select class="email_selector span2 btn btn-primary" title="@mail.mcgill.ca" >
                <option>@mail.mcgill.ca</option>
                <option>@mcgill.ca</option>
            </select>
			</div>

			<%= f.label :password, "McGill Password", class: "cus-lock" %>
			<%= f.password_field :password, placeholder: 'McGill password'%>

			<%= button_tag(type: 'submit', class: "btn btn-medium btn-primary") do %>
				<i class="cus-login"></i> Sign in
			<% end %>
		<% end %>

		<p>New User? <%= link_to "Sign up now!", signup_path, class: "cus-user" %></p>
	</div>
</div>