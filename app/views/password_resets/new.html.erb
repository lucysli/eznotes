<% provide(:title, 'Password Reset') %>
<h1> Reset Password </h1>
<div class="row">
   <div class="span4">
      <%= form_tag password_resets_path, method: :post do %>
         <div class="field">
            <%= label_tag :email, nil, class: "cus-mail-alt" %>
            <%= text_field_tag :email, params[:email], class: "emailReset" %>
         </div>
         <div class="actions">
            <%= button_tag type: 'submit', class: "btn btn-large btn-primary" do %>
               <i class="cus-lock-open-alt"></i> Reset Password
            <% end %>
         </div>
      <% end %>
   </div>
</div>
